<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/ldtteam/BlockUI/version/main/src/main/resources/assets/blockui/gui/block_ui.xsd"
        size="420 240" pause="false" type="OVERSIZED_VANILLA" lightbox="false">

    <text id="tip" size="200 50" pos="150 100" color="white" label="$(structurize.gui.manipulation.info)" visible="false"/>

    <view size="48 64" pos="370 100" id="manipulator">
        <button id="rotateLeft" source="structurize:textures/gui/buildtool/rotateleft.png" size="16" pos="0 0"/>
        <button id="up" source="structurize:textures/gui/buildtool/up.png" size="16" pos="16 0"/>
        <button id="rotateRight" source="structurize:textures/gui/buildtool/rotateright.png" size="16" pos="32 0"/>
        <button id="left" source="structurize:textures/gui/buildtool/left.png" size="16" pos="0 16"/>
        <button id="mirror" source="structurize:textures/gui/buildtool/mirror.png" size="16" pos="16 16"/>
        <button id="right" source="structurize:textures/gui/buildtool/right.png" size="16" pos="32 16"/>
        <button id="minus" source="structurize:textures/gui/buildtool/minus.png" size="16" pos="0 32"/>
        <button id="down" source="structurize:textures/gui/buildtool/down.png" size="16" pos="16 32"/>
        <button id="plus" source="structurize:textures/gui/buildtool/plus.png" size="16" pos="32 32"/>
        <image id="rotation" size="16" pos="96 0"/>
    </view>

    <list size="188 100" pos="5 113" id="settinglist" visible="false">
        <view size="100% 20">
            <text size="150 17" pos="0 0" id="label"/>
            <button id="switch" source="structurize:textures/gui/builderhut/builder_button_very_small.png" size="29 15" pos="150 0" textcolor="black" texthovercolor="gray"/>
            <input id="set_input" size="29 15" pos="150 0"/>
        </view>
    </list>

    <list size="100 80" pos="160 80" id="placement" visible="false">
        <button id="type" source="structurize:textures/gui/buildtool/button_medium.png" size="86 17" pos="0 0" textcolor="black" texthovercolor="gray"/>
    </list>

    <button id="confirm" source="structurize:textures/gui/buildtool/confirm.png" size="30" pos="300 213"/>
    <button id="cancel" source="structurize:textures/gui/buildtool/cancel.png" size="30" pos="90 213"/>

    <button id="settings" source="structurize:textures/gui/buildtool/settings.png" size="30" pos="0 213"/>
    <button id="contents" source="structurize:textures/gui/buildtool/paste.png" size="32 32" pos="30 212" tooltip="$(com.ldtteam.structurize.gui.scantool.showres)" visible="false"/>
</window>
