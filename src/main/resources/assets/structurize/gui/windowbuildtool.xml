<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../java/com/ldtteam/blockout/blockOut.xsd"
        size="420 240" pause="false" lightbox="false">

    <button id="previousBuildingType" size="15 15" pos="0 0" label="&lt;"/>
    <button id="nextBuildingType" size="15 15" pos="125 0" label="&gt;"/>
    <dropdown id="buildingType" size="112 15" pos="14 0" maxContentHeight="75" dropDownSize="140 75">
        <view size="100% 15">
            <label id="id" size="100% 100%" label="" pos="0 0"/>
            <button id="button" size="100% 100%" label="" pos="0 0"/>
        </view>
    </dropdown>

    <button id="previousStyle" size="15 15" pos="140 0" label="&lt;"/>
    <button id="nextStyle" size="15 15" pos="265 0" label="&gt;"/>
    <dropdown id="style" size="112 15" pos="154 0" maxContentHeight="75" dropDownSize="140 75">
        <view size="100% 15">
            <label id="id" size="100% 100%" label="" pos="0 0"/>
            <button id="button" size="100% 100%" label="" pos="0 0"/>
        </view>
    </dropdown>

    <button id="previousSchematic" size="15 15" pos="280 0" label="&lt;"/>
    <button id="nextSchematic" size="15 15" pos="405 0" label="&gt;"/>
    <dropdown id="schematic" size="112 15" pos="294 0" maxContentHeight="75" dropDownSize="140 75">
        <view size="100% 15">
            <label id="id" size="100% 100%" label="" pos="0 0"/>
            <button id="button" size="100% 100%" label="" pos="0 0"/>
        </view>
    </dropdown>

    <button id="rename" size="114 15" pos="293 20" label="Rename" visible="false"/>
    <button id="delete" size="114 15" pos="293 40" label="Delete" visible="false"/>

    <label id="warning" size="70 12" pos="25 45" color="white" label="$(structurize.gui.buildtool.unexpecteddatafixer)" visible="false"/>

    <label size="300 9" pos="60 65" color="white" label="$(com.structurize.gui.buildtool.tip)" textalign="MIDDLE"/>
    <view size="96 128" pos="162 80">
        <button id="rotateLeft" source="structurize:textures/gui/buildtool/rotateleft.png" size="32" pos="0 0"/>
        <button id="up" source="structurize:textures/gui/buildtool/up.png" size="32" pos="32 0"/>
        <button id="rotateRight" source="structurize:textures/gui/buildtool/rotateright.png" size="32" pos="64 0"/>
        <button id="left" source="structurize:textures/gui/buildtool/left.png" size="32" pos="0 32"/>
        <button id="mirror" source="structurize:textures/gui/buildtool/mirror.png" size="32" pos="32 32"/>
        <button id="right" source="structurize:textures/gui/buildtool/right.png" size="32" pos="64 32"/>
        <button id="minus" source="structurize:textures/gui/buildtool/minus.png" size="32" pos="0 64"/>
        <button id="down" source="structurize:textures/gui/buildtool/down.png" size="32" pos="32 64"/>
        <button id="plus" source="structurize:textures/gui/buildtool/plus.png" size="32" pos="64 64"/>
        <button id="confirm" source="structurize:textures/gui/buildtool/confirm.png" size="32" pos="0 96"/>
        <button id="cancel" source="structurize:textures/gui/buildtool/cancel.png" size="32" pos="64 96"/>
    </view>
    <image id="rotation" size="16" pos="258 80"/>
    <box id="wallmode" size="50 100" pos="0 60" color="rgb(255,255,255)" linewidth="1" visible="false">
        <itemicon item="minecraft:cobblestone_wall" size="33 33" pos="10 0"
                  tooltip="$(structurize.gui.buildtool.wallmode)"/>
        <image size="16" pos="17 40" source="structurize:textures/gui/buildtool/wallneg.png"
               tooltip="$(structurize.gui.buildtool.wallneg)"/>
        <buttonimage id="wallreduceneg" size="14 15" pos="2 42" label="-"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <buttonimage id="wallextendneg" size="14 15" pos="33 42" label="+"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <image size="16" pos="17 60" source="structurize:textures/gui/buildtool/wallpos.png"
               tooltip="$(structurize.gui.buildtool.wallpos)"/>
        <buttonimage id="wallreducepos" size="14 15" pos="2 62" label="-"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <buttonimage id="wallextendpos" size="14 15" pos="33 62" label="+"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <image size="16" pos="17 80" source="structurize:textures/gui/buildtool/wallovl.png"
               tooltip="$(structurize.gui.buildtool.wallovl)"/>
        <buttonimage id="wallreduceovl" size="14 15" pos="2 82" label="-"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
        <buttonimage id="wallextendovl" size="14 15" pos="33 82" label="+"
                     source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    </box>

    <button id="pastecomplete"
            tooltip="$(structurize.gui.buildtool.paste)"
            source="structurize:textures/gui/buildtool/copy.png"
            visible="false"
            size="32 32"
            pos="320 210"
            textcolor="Black"
            texthovercolor="White"/>
    <button id="pastenice" tooltip="$(structurize.gui.buildtool.pastenice)" source="structurize:textures/gui/buildtool/paste.png" visible="false" size="32 32" pos="355 210"/>
    <buttonimage id="undoredo"
                 tooltip="$(structurize.gui.undoredo)"
                 source="structurize:textures/gui/buildtool/undoredo.png"
                 visible="true"
                 size="32 32"
                 pos="390 210"
                 textcolor="Black"
                 texthovercolor="White"/>

    <button id="showinvis" tooltip="$(structurize.gui.buildtool.show)" source="structurize:textures/blocks/blocksubstitution.png" size="26 26" pos="25 210"/>
</window>
