<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" size="420 240" pause="false"
        lightbox="false"
        xsi:noNamespaceSchemaLocation="file:../../../../java/com/structurize/blockout/blockOut.xsd">

    <buttonimage label="$(com.structurize.coremod.gui.shapeTool.pickblock)" id="pickMainBlock" pos="49 0" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <itemicon id="resourceIcon" item="minecraft:gold_block" size="17 17" pos="84 18"/>

    <buttonimage label="$(com.structurize.coremod.gui.shapeTool.ignore)" id="replaceBlocks" pos="49 45" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <buttonimage label="$(com.structurize.coremod.gui.shapeTool.hollow)" id="hollowShape" pos="49 73" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <buttonimage id="previousShape" size="14 15" pos="140 0" label="&lt;"
                 source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    <dropdown id="style" size="129 17" pos="155 0" maxContentHeight="75" dropDownSize="140 75" source="structurize:textures/gui/builderhut/builder_button_medium_large.png" textcolor="black">
        <view size="100% 15">
            <label id="id" size="100% 100%" label="" pos="0 0"/>
            <button id="button" size="100% 100%" label="" pos="0 0"/>
        </view>
    </dropdown>
    <buttonimage id="nextShape" size="14 15" pos="285 0" label="&gt;"
            source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <label label="Width" id="widthLabel" size="20 20" pos="310 0"/>
    <label label="Length" id="lengthLabel" size="20 20" pos="304 25"/>
    <label label="Height" id="heightLabel" size="20 20" pos="306 50"/>

    <input id="width" size="20 20" pos="340 0" maxlength="3"/>
    <input id="length" size="20 20" pos="340 25" maxlength="3"/>
    <input id="height" size="20 20" pos="340 50" maxlength="3"/>

    <view size="120 112" pos="160 80">
        <buttonimage id="rotateLeft" source="structurize:textures/gui/buildtool/rotateleft.png" size="32" pos="0 0"/>
        <buttonimage id="up" source="structurize:textures/gui/buildtool/up.png" size="32" pos="32 0"/>
        <buttonimage id="rotateRight" source="structurize:textures/gui/buildtool/rotateright.png" size="32" pos="64 0"/>
        <buttonimage id="left" source="structurize:textures/gui/buildtool/left.png" size="32" pos="0 32"/>
        <buttonimage id="mirror" source="structurize:textures/gui/buildtool/mirror.png" size="32" pos="32 32"/>
        <buttonimage id="right" source="structurize:textures/gui/buildtool/right.png" size="32" pos="64 32"/>
        <buttonimage id="minus" source="structurize:textures/gui/buildtool/minus.png" size="32" pos="0 64"/>
        <buttonimage id="down" source="structurize:textures/gui/buildtool/down.png" size="32" pos="32 64"/>
        <buttonimage id="plus" source="structurize:textures/gui/buildtool/plus.png" size="32" pos="64 64"/>
        <buttonimage id="confirm" source="structurize:textures/gui/buildtool/confirm.png" size="32" pos="0 96"/>
        <buttonimage id="cancel" source="structurize:textures/gui/buildtool/cancel.png" size="32" pos="64 96"/>
    </view>

    <buttonimage id="undo" source="structurize:textures/gui/buildtool/rotateleft.png" visible="false" size="32 32" pos="350 210" textcolor="Black" texthovercolor="White"/>
</window>
